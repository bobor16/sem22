grammar org.xtext.example.mydsl.Garden with org.eclipse.xtext.common.Terminals

generate garden "http://www.xtext.org/example/mydsl/Garden"

MetaModel:
    'application' name=ID	
	components += Component*
;

Component:
	'component' name=ComponentType '{'
		'address' '=' byte01=STRING','byte02=STRING','byte03=STRING','byte04=STRING','byte05=STRING','byte06=STRING //TODO
		devices+=Device*
	'}'
;

ComponentType:
	type='WaterController'|type='GatewayController'|type='GardenController'
;

Device:
	'device' '=' deviceType=DeviceType('@input' '#'inputPin=INT)?
;

DeviceType returns Device:
	{MoistureSensor} 	name='MoistureSensor' 		| 
	{WaterPumpActuator} name='WaterPumpActuator' 	| 
	{TemperatureSensor} name='TemperatureSensor' 	| 
	{UltraSonicSensor} 	name='UltraSonicSensor' 
;

